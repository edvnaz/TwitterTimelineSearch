<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/parameter_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@color/background_twitter_darker"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/empty_parameters"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/parameter_found"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:background="@color/background_twitter_darker"
        android:visibility="visible">

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/par1"
                android:layout_weight="1"
                android:text="@string/par1" />

            <TextView
                android:id="@+id/par2"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="@string/par2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/twitter_blue"
            android:padding="0.2sp" />

        <TableRow android:layout_weight="1">

            <TextView
                android:id="@+id/par3"
                android:layout_weight="1"
                android:text="@string/par3" />

            <TextView
                android:id="@+id/par4"
                android:layout_column="2"
                android:layout_weight="1"
                android:text="@string/par4" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/twitter_blue"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_margin="2sp"
                android:contentDescription="@string/profile_image" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="5sp"
                android:text="@string/user"
                android:textColor="@color/text_white"
                android:textSize="20sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/list_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff" />
    </LinearLayout>

</LinearLayout>
